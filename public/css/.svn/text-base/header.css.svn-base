@font-face {
    font-family: "Harabara";
    src: url('../font/Harabara.ttf');
}

div.header {
    background-color: #CB5100; /*#C11719;*/ /*#c8531a;*/ /*#B42A2A;*/ /*#b42a2a;*/ /*#D55500;*/
    padding: 10px 15px;
}
div.header div.logo { 
    display: inline; 
}
div.header div.logo a {
    color: white;
    font-family: "Harabara";
    font-size: 24px;
    letter-spacing: 1px;
    text-decoration: none;
}
div.header form { 
    display: inline; 
    margin-left: 20px;
}
div.header form div.campos_busca {
    background-color: white;
    height: 23px;
    width: 230px;
    display: inline-block;
    font-family: sans-serif;
}
div.header form .input_busca {
    height: 20px;
    width: 200px;
    font-size: 12px;
    color:#333;
    border: none;
    vertical-align: bottom;
    display: inline;
    margin-left: 5px;
}
div.header form .btn {
    float: right;
    padding-top: 4px;
}
div.header div.menu {
    float: right;
}
div.header div.menu ul.lista_menu { 
    list-style-type: none;
    margin: 4px 0 0 0;
    padding: 0;
}
div.header div.menu ul.lista_menu li {
    margin: 0 5px;
    float: left;
}
div.header div.menu ul.lista_menu li a.hover {
    background-color: #B44A05;
}
div.header ul.lista_menu li a {
    color: white;
    text-decoration: none;
    font-size: 14px;
    font-family: verdana, sans-serif;
    padding: 14px 7px;
    margin: -15px 5px;    
}
