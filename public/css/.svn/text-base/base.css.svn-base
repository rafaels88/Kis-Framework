body {
    margin: 0;
}
body * {
    font-family: arial;
    font-size: small;
    color: #222;
}
body div.global {
    text-align: center;
}
div.interno {
    width: 965px;
    text-align: left;
    clear: both;
}
h2 {
    font-family: "georgia", sans-serif;
    font-style: italic;
    font-size: 24px;
    letter-spacing: -0.04em;
    font-weight: normal;
}
h3 {
    font-size: 18px;
}
.clear {
    clear: both;
}

form .label {
    text-align:right; 
    font-size:14px; 
    display: inline-block; 
    margin: 5px 0;
    font-family: serif;
}
form input.text {
    height: 18px;
    width: 200px;
}
